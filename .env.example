# Warp Web Navigator - Environment Variables Template
# Copy this file to .env and update with your actual values

# =============================================================================
# WARP API CONFIGURATION
# =============================================================================

# Required: API key for Warp Web Navigator services
# Get this from: https://warp.dev/developers
# Format: warp_dev_... (development) or warp_prod_... (production)
WARP_API_KEY=warp_dev_12345abcdef67890ghijklmnopqrstuv

# Optional: Warp API endpoint URL
# Default: https://api.warp.dev/v1
# Use different endpoints for development/staging/production
WARP_ENDPOINT=https://api.warp.dev/v1

# =============================================================================
# NOTIFICATION WEBHOOKS (Optional)
# =============================================================================

# Optional: Slack webhook URL for CI/CD notifications
# Get this from: https://api.slack.com/apps > Incoming Webhooks
# Format: https://hooks.slack.com/services/...
SLACK_WEBHOOK=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX

# Optional: Microsoft Teams webhook URL for CI/CD notifications  
# Get this from: Teams channel > ... > Connectors > Incoming Webhook
# Format: https://outlook.office.com/webhook/...
TEAMS_WEBHOOK=https://outlook.office.com/webhook/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx@xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx/IncomingWebhook/yyyyyyyyyyyyyyyyyyyyyyyy/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment mode (development, staging, production)
NODE_ENV=development

# Enable debug logging (true/false)
DEBUG=true

# CI/CD provider (github-actions, gitlab-ci, jenkins, etc.)
CICD_PROVIDER=github-actions

# Default test suite (basic, forms, interactions, performance, full)
DEFAULT_TEST_SUITE=basic

# Test timeout in milliseconds
TEST_TIMEOUT=30000

# =============================================================================
# BROWSER CONFIGURATION
# =============================================================================

# Default browser for testing (chrome, edge, firefox, safari)
DEFAULT_BROWSER=chrome

# Headless mode for automated testing (true/false)
HEADLESS_BROWSER=true

# Browser viewport size for testing
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# AI provider (warp, openai, anthropic, local)
AI_PROVIDER=warp

# OpenAI API key (if using OpenAI provider)
# OPENAI_API_KEY=sk-...

# Anthropic API key (if using Anthropic provider)  
# ANTHROPIC_API_KEY=...

# Local AI endpoint (if using local provider)
# LOCAL_AI_ENDPOINT=http://localhost:11434

# AI model to use
AI_MODEL=gpt-4

# Maximum AI response tokens
AI_MAX_TOKENS=2000

# =============================================================================
# REPORTING CONFIGURATION
# =============================================================================

# Report formats (json, html, junit, csv)
REPORT_FORMATS=json,html,junit

# Report storage location
REPORT_OUTPUT_DIR=./test-results

# Keep report history (number of runs to keep)
REPORT_HISTORY_LIMIT=10

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================

# Lighthouse CI configuration
LIGHTHOUSE_ENABLED=true
LIGHTHOUSE_URLS=https://example.com,https://example.com/login

# Performance budget thresholds
PERFORMANCE_SCORE_THRESHOLD=80
ACCESSIBILITY_SCORE_THRESHOLD=90
BEST_PRACTICES_SCORE_THRESHOLD=85
SEO_SCORE_THRESHOLD=85

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable security scanning (true/false)
SECURITY_SCAN_ENABLED=true

# Security audit level (low, moderate, high, critical)
SECURITY_AUDIT_LEVEL=moderate

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log format (json, pretty)
LOG_FORMAT=pretty

# Log file location
LOG_FILE=./logs/warp.log

# Maximum log file size in MB
LOG_MAX_SIZE=10

# Number of log files to keep
LOG_MAX_FILES=5
